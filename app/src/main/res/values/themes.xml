<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VIB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="StyleRippleDefault">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/rippleColor</item>
        <item name="mrl_rippleDuration">350</item>
        <item name="mrl_rippleFadeDuration">75</item>
    </style>

    <style name="mainButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">"@font/avenir_next_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="topMainTextView" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/avenir_next_bold</item>

    </style>

    <style name="Custom_Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="StyleRippleCircle" parent="StyleRippleDefault">
        <item name="mrl_rippleRoundedCorners">48dp</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="backgroundTint">@color/light_black</item>

    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>


    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/black</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MineCustomTabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

</resources>