<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">



    <RelativeLayout
        android:id="@+id/lltop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     >

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/white"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivcommentUserProfile"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:scaleType="fitXY"
            android:src="@drawable/profile_img_stroke"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/Circular"

            />


        <TextView
            android:id="@+id/txtProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_toRightOf="@+id/ivcommentUserProfile"
            android:fontFamily="@font/avenir_next_bold"
            android:text="@string/michelle_stonr"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtProfileName"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_toRightOf="@+id/ivcommentUserProfile"
            android:fontFamily="@font/avenir_next_medium"
            android:text="2m"
            android:textColor="@color/Grey"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTime"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/avenir_next_medium"
            android:lineSpacingExtra="@dimen/_4sdp"
            android:text="@string/adding_a_few_more_photos_to_my_portfolio_need_a_photographer_get_in_touch"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/feedImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_below="@id/txtDescription"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:src="@drawable/gym_exe" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedImg"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/heart"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/avenir_next_regular"
                android:text="@string/_100_likes"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/txtComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/coment"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="@string/_25_comments"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_next_regular"
                android:drawablePadding="@dimen/_8sdp"
                />


        </LinearLayout>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/lltop"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@color/white" />


</RelativeLayout>