<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_14sdp">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/llimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/editext_bg_2"
            android:gravity="center"
            app:cardCornerRadius="@dimen/_10sdp"
            app:strokeColor="@color/white"
            app:strokeWidth="@dimen/_2sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImage"
                style="@style/Circular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/gym_list" />

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/txtGymName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_toRightOf="@id/llimage"
            android:fontFamily="@font/avenir_next_medium"
            android:text="@string/transformation_gym"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtGymName"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_38sdp"
            android:layout_toRightOf="@id/llimage"
            android:fontFamily="@font/avenir_next_medium"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:text="@string/miami_florida"
            android:textColor="@color/white"
            android:drawableStart="@drawable/map_lue"
            android:drawablePadding="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLocation"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_38sdp"
            android:layout_toRightOf="@id/llimage"
            android:drawableStart="@drawable/ic_watch_later"
            android:drawableTint="@color/blue"
            android:drawablePadding="@dimen/_6sdp"
            android:fontFamily="@font/avenir_next_medium"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:text="5pm - 10pm"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/ll"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/white" />


</RelativeLayout>