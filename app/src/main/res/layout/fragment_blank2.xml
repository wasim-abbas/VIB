    </RelativeLayout>

    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintDimensionRatio="1:2.5"
        android:background="@drawable/balck_bg"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_90sdp"
            android:background="@color/white" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/feedTabs"
            app:tabBackground="@drawable/tab_selector_bg"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabPaddingEnd="@dimen/_36sdp"
            app:tabPaddingStart="@dimen/_36sdp"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/MineCustomTabText"
            app:tabTextColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_members"
            android:textColorHint="@color/white"
            android:fontFamily="@font/avenir_next_bold"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:focusable="false"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_20sdp"
            android:backgroundTint="@color/Grey"
            android:drawableEnd="@drawable/ic_search"
            android:paddingEnd="@dimen/_12sdp"
            android:drawableTint="@color/light_black"
            android:background="@drawable/editetx_bg"
            android:layout_marginHorizontal="@dimen/_20sdp"
            />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPAger"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

